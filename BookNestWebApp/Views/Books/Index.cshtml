@model List<Book>
@{
    ViewBag.Title = "Books";
}
<h2>Books</h2>
<form method="get" class="mb-3 row">
    <div class="col-md-3">
        <input type="text" name="search" class="form-control" placeholder="Search..." value="@ViewBag.Search" />
    </div>
    <div class="col-md-3">
        <select name="sort" class="form-select">
            <option value="BookID">Sort by BookID</option>
            <option value="Title">Sort by Title</option>
            <option value="Price">Sort by Price</option>
            <option value="Genre">Sort by Genre</option>
            <option value="Stock">Sort by Stock</option>
        </select>
    </div>
    <div class="col-md-3">
        <button type="submit" class="btn btn-primary">Go</button>
    </div>
</form>
<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>ID</th><th>Title</th><th>Price</th><th>Genre</th><th>Stock</th><th>Author</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var book in Model)
        {
            <tr>
                <td>@book.BookID</td>
                <td>@book.Title</td>
                <td>@book.Price</td>
                <td>@book.Genre</td>
                <td>@book.Stock</td>
                <td>@book.AuthorName</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = book.BookID })" class="btn btn-sm btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", new { id = book.BookID })" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Create")" class="btn btn-success">Add New Book</a>